    "dev-dka": "concurrently npm:sass-dka npm:sass-watch-dka npm:browser-sync-dka",
    "lint-scss-dka": "stylelint ./dka-frontpage/styles.scss ./**/*.scss",
    "lint-css-dka": "stylelint ./dka-frontpage/styles.css ./**/*.css"

